<h1>List of Quotes</h1>
<table id="customers" border="1">
  <thead>
    <tr>
      <th>Author Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
<%  @posts.each do |post| %>
  <tr>
     <td><%= link_to post.name,{:action => "show", :id => post.id} %></td>
     <td><%= button_to 'Edit/Add More', {:action => "edit",:id => post.id},{class: 'button'} %></td> 
	 <td> <%= button_to 'Delete', micropost_path(post),
	                                   method: :delete, 
	                                   class: :button,             
									   data: { confirm: 'Are you sure?' }%></td> 
  </tr>
<% end %>
</table>
<br/>
<%= link_to 'New Quote', {:action => 'new',:user_id=> $user},{class: 'button'} %>
<%= link_to 'Logout', {:controller =>'login',:action => 'index'},{class: 'button'} %> 
